{
  "version": 1,
  "patterns": [
    {
      "name": "GitHub Token (classic)",
      "regex": "gh[pousr]_[A-Za-z0-9_]{36,255}"
    },
    {
      "name": "GitHub Token (fine-grained)",
      "regex": "github_pat_[A-Za-z0-9_]{80,255}"
    },
    {
      "name": "GitLab Personal Access Token",
      "regex": "glpat-[A-Za-z0-9_-]{20,}"
    },
    {
      "name": "AWS Access Key",
      "regex": "AKIA[0-9A-Z]{16}"
    },
    {
      "name": "AWS Secret Key",
      "regex": "(?i)aws(.{0,20})?[\"'][0-9a-zA-Z/+]{40}[\"']"
    },
    {
      "name": "Slack Token",
      "regex": "xox[baprs]-[0-9]{10,12}-[0-9]{10,12}-[0-9a-zA-Z]{24,32}"
    },
    {
      "name": "Google API Key",
      "regex": "AIza[0-9A-Za-z_-]{35}"
    },
    {
      "name": "Private Key",
      "regex": "-----BEGIN (?:RSA |EC |OPENSSH )?PRIVATE KEY-----"
    },
    {
      "name": "JWT (possible)",
      "regex": "eyJ[a-zA-Z0-9_-]{10,}[.]eyJ[a-zA-Z0-9_-]{10,}[.][a-zA-Z0-9_-]{10,}"
    },
    {
      "name": "SendGrid API Key",
      "regex": "SG[.][A-Za-z0-9_-]{22}[.][A-Za-z0-9_-]{43}"
    },
    {
      "name": "Stripe Secret Key",
      "regex": "sk_(?:live|test)_[0-9a-zA-Z]{24,}"
    },
    {
      "name": "Telegram Bot Token",
      "regex": "[0-9]{8,10}:[A-Za-z0-9_-]{35}"
    },
    {
      "name": "Generic Secret",
      "regex": "(?i)(secret|password|api[_-]?key|token|credential)[\"']?\\s*[:=]\\s*[\"']?[a-zA-Z0-9_-]{16,}[\"']?"
    }
  ]
}
